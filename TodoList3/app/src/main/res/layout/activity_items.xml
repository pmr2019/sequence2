<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/showListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/newItemTE"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/newItemTE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/newItemB"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="@string/mon_item"
        android:autofillHints="@string/mon_item"
        android:singleLine="true"/>

    <Button
        android:id="@+id/newItemB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/newListButtonStr"
        android:layout_margin="10dp"
        android:onClick="addItem"/>

</androidx.constraintlayout.widget.ConstraintLayout>